<h1><%= @restaurant.name%></h1>
<h3>Category: <%= @restaurant.category%></h3>
<p>Address: <%= @restaurant.address%></p>
<p>Contact: <%= @restaurant.phone_number%></p>
<p>Reviews:</p>
<ul>
	<% @restaurant.reviews.each do |review| %>
		<li><%= review.rating %> <%= review.content %></li>
	<% end %>
</ul>
<p><%= link_to 'Add review', new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to 'Go back', restaurants_path %></p>
